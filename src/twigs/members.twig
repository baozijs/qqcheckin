{% extends 'base.twig' %}

{% block page_title %}会员管理{% endblock %}

{% block main_content %} 
    <div class="row">
        <div class="col-md-12">
            <div class="lead">
                <h3>{{ '<<会员管理>>' }}</h3>
            </div>
        </div>
        <div class="col-md-12">
            <table class="table table-striped table-condensed">
                <tr>
                    <th class="text-right">QQ号</th>
                    <th class="text">昵称</th>
                    <th class="text">最后打卡时间</th>
                    <th class="text">操作</th>
                </tr>
                {% for member in qqusers %}
                <tr>
                    <td>{{ member['qqno'] }}</td>
                    <td>{{ member['nick'] }}</td>
                    <td>{{ member['lastCheckinShow'] }}</td>
                    <td><a href="#" class="btn btn-danger btn-sm">踢掉</a></td>
                </tr>
                {% endfor %}
            </table>
        </div>

    </div>
{% endblock %}