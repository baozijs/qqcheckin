{% extends 'base.twig' %}

{% block page_title %}Login{% endblock %}

{% block main_content %} 
    <div class="row">
        <div class="col-xs-12">
        <h1>{{ '<<'~'最近5周统计('~_start|date('m-d')~'~'~_end|date('m-d')~')>>' }}</h1>
        <div>
            <a href="{{ path_for('admin-home') }}" class="btn btn-default">back to dashboard</a>
        </div>
        </div>
        <div class="col-xs-12">
            <table class="table table-striped table-condensed">
                <tr>
                    <th class="text-right">成员/项目</th>
                    <th>{{ '总 计'}}</th>
                    {% for i in range(5, 1) %}
                    <th>{{ '第'~i~'周'}}</th>
                    {% endfor %}
                    {% for i in _items %}
                    <th>{{ i.name }}</th>
                    {% endfor %}
                </tr>
                {% for qqno, res2 in _statistics2 %}
                {% set res1 = _statistics1[qqno] %}

                {% set sum = 0 %}
                {% for r in res2 %}
                {% set sum = sum + r %}
                {% endfor %}

                <tr>
                    <th class="text-right">
                    <a href="{{ path_for('user-view', {group: group, qqno: qqno}) }}">{{ _qqusers[qqno] }}</a>
                    </th>
                    <td>{{ sum }}</td>
                    {% for r in res2 %}
                    <td>{{ r }}</td>
                    {% endfor %}
                    {% for ik,iv in _items %}
                    <td>{{ res1[ik] }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}