{% extends 'base.twig' %}

{% block main_content %} 
    <div class="row">
        <div class="col-xs-12">
            <h1>Administration</h1>
            {% for key, name in groups %}
              <div>
              <h2>{{ name }}</h2>
              <a class="btn btn-default btn-xs" href="{{ path_for('admin-upload', {group: key}) }}">Upload Chat Records</a>
              <a class="btn btn-default btn-xs"  href="{{ path_for('admin-view', {group: key}) }}">View recent data</a>
              <a class="btn btn-default btn-xs"  href="{{ path_for('admin-statistics', {group: key}) }}">Statistics</a>
              </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}