{% extends 'base.twig' %}

{% block page_title %}上传聊天记录{% endblock %}

{% block main_content %} 
    <div class="row">
        <div class="col-xs-12">
            <h1>Upload for {{ groups[group] }}</h1>
            <form role="form" action="/admin/{{ group }}/upload" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="exampleInputFile">QQ Chat Records:</label>
                  <input type="file" name="qqchat">
                  <p class="help-block">Please select the file of qq chat records.</p>
                </div>
                <input type="submit" value="Upload" class="btn btn-default" />
            </form>
        </div>
    </div>
{% endblock %}
